<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <EditText
        android:id="@+id/editText"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:background="#a6efd6"
        android:hint="0"
        android:textSize="40dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/number7"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/editText"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="7"/>
    <Button
        android:id="@+id/number8"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/number7"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="8"/>
    <Button
        android:id="@+id/number9"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/number8"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="9"/>
    <Button
        android:id="@+id/chia"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/number9"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="/"/>
    <Button
        android:id="@+id/clear"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/chia"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="C"/>

    <Button
        android:id="@+id/number4"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/number7"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="4"/>
    <Button
        android:id="@+id/number5"
        android:layout_below="@+id/number8"
        android:layout_toRightOf="@+id/number4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="5"/>
    <Button
        android:id="@+id/number6"
        android:layout_below="@+id/number9"
        android:layout_toRightOf="@+id/number5"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="6"/>
    <Button
        android:id="@+id/nhan"
        android:layout_below="@+id/chia"
        android:layout_toRightOf="@+id/number6"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="*"/>
    <Button
        android:id="@+id/allClear"
        android:layout_below="@+id/clear"
        android:layout_toRightOf="@+id/nhan"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="23dp"
        android:text="AC"/>
    <Button
        android:id="@+id/number1"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/number4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="1"/>
    <Button
        android:id="@+id/number2"
        android:layout_below="@+id/number5"
        android:layout_toRightOf="@+id/number1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="2"/>
    <Button
        android:id="@+id/number3"
        android:layout_below="@+id/number6"
        android:layout_toRightOf="@+id/number2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="3"/>
    <Button
        android:id="@+id/tru"
        android:layout_below="@+id/nhan"
        android:layout_toRightOf="@+id/number3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="35dp"
        android:text="-"/>
    <Button
        android:id="@+id/tinh"
        android:layout_below="@+id/allClear"
        android:layout_toRightOf="@+id/tru"
        android:layout_width="55dp"
        android:layout_height="111dp"
        android:textSize="35dp"
        android:text="="/>
    <Button
        android:id="@+id/number0"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/number1"
        android:layout_width="111dp"
        android:layout_height="55dp"
        android:textSize="30dp"
        android:text="0"/>
    <Button
        android:id="@+id/cham"
        android:layout_below="@+id/number3"
        android:layout_toRightOf="@+id/number0"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="35dp"
        android:text="."/>
    <Button
        android:id="@+id/cong"
        android:layout_below="@+id/tru"
        android:layout_toRightOf="@+id/cham"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:textSize="35dp"
        android:text="+"/>
</RelativeLayout>
